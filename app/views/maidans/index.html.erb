<div class="panel panel-default">
  <form action="/maidans" method="get">
    商家ID
    <input type="text" id='merchant_id' name="merchant_id" value="<%= params[:merchant_id]%>">
    <input type="submit" name="" value="搜索">
  </form>
  <div class="panel-heading">
      买单列表
  </div>
  <div class="table-responsive">
    <table class="table table-striped b-t b-light">
      <thead>
        <tr>
          <th>商家ID</th>
          <th>买单内容</th>
          <th style="width:120px;">创建时间</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
       <% @maidans.each do |maidan| %>
      <tr>
        <td><%= maidan.merchant_id %></td>
        <td><%= maidan.content %></td>
        <td><%= maidan.created_at.strftime("%F %T") %></td>
        <td><%= link_to '查看', maidan, class: "btn btn-default btn-xs" %>
        <%= link_to '修改', edit_maidan_path(maidan), class: "btn btn-default btn-xs" %>
        <%= link_to '删除', maidan_path(maidan), method: :delete, class: "btn btn-default btn-xs"  %>
        </td>
      </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <footer class="panel-footer">
    <%= render partial: "shared/admin/paginate", locals: { object: @maidans } %>
  </footer>
</div>