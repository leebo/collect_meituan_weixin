<%= simple_form_for(@city, html: { multipart: true, class: "form-horizontal" }) do |f| %>
    <%= f.input :name, label: "城市名" %>
  <div class="line line-dashed b-b line-lg pull-in"></div>
    <%= f.input :ci, label: "城市ID" %>
  <div class="line line-dashed b-b line-lg pull-in"></div>
    <%= f.input :citypinyin, label: "城市拼音" %>
  <div class="line line-dashed b-b line-lg pull-in"></div>
  <div class="col-sm-10 col-sm-offset-2">
    <%= f.button :submit, "提 交", class: "btn btn-primary" %>
    <%= link_to "返 回", citys_path, class: "btn btn-default" %>
  </div>
<% end %>
